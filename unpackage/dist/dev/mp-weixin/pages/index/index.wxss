.index {
  min-height: calc(100vh - 0px - 0px);
}
.navbar {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  padding: 0 30rpx;
  background-color: #fff;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.navbar-title {
  font-size: 50rpx;
}
.navbar-logo {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  -webkit-transform: translateY(5rpx);
          transform: translateY(5rpx);
  position: absolute;
}
.navbar-content {
  margin: 30rpx 0;
  height: 70rpx;
}
.navbar .share {
  width: 50rpx;
  height: 50rpx;
  position: relative;
}
.navbar .share-btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.search {
  height: 70rpx;
  background-color: whitesmoke;
  padding: 0 30rpx;
  border-radius: 100rpx;
}
.search-logo {
  width: 48rpx;
  height: 48rpx;
}
.search-text {
  color: gray;
  font-size: 32rpx;
  margin-left: 20rpx;
}
.hot-swiper {
  margin: 30rpx 0;
}
.hot-swiper .u-swiper-item {
  width: 240rpx !important;
  padding-right: 20rpx !important;
}
.tab .u-tab-item {
  color: gray !important;
  height: 70rpx !important;
  line-height: 70rpx !important;
  border-radius: 50rpx;
  margin-right: 20rpx;
  background-color: whitesmoke;
}
.tab-content {
  display: flex;
  flex-wrap: wrap;
}
.fixed-tab {
  transition: opacity .3s;
  visibility: hidden;
  opacity: 0;
}
.fixed-tab--show {
  opacity: 1;
  z-index: 1;
  visibility: visible;
}
.fixed-tab .u-tab-item {
  color: gray !important;
  height: 70rpx !important;
  line-height: 70rpx !important;
  border-radius: 50rpx;
  margin-right: 20rpx;
  background-color: whitesmoke;
}
.loadmore-list {
  display: flex;
  flex-wrap: wrap;
}
.loadmore-list--item {
  width: 230rpx;
  height: 230rpx;
  position: relative;
  padding: 10rpx;
  position: relative;
}
.loadmore-list--item .before {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  border-radius: 20rpx;
  background-color: whitesmoke;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.loadmore-list--item .before text {
  color: gray;
  margin-top: 10rpx;
}
.loadmore-list--item image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: relative;
  z-index: 2;
}

