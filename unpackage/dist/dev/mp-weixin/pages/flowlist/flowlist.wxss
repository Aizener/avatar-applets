.loadmore-list {
  display: flex;
  flex-wrap: wrap;
}
.loadmore-list--item {
  width: 230rpx;
  height: 230rpx;
  position: relative;
  padding: 10rpx;
  position: relative;
}
.loadmore-list--item .before {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  border-radius: 20rpx;
  background-color: whitesmoke;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.loadmore-list--item .before text {
  color: gray;
  margin-top: 10rpx;
}
.loadmore-list--item image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: relative;
  z-index: 2;
}
.loadmore .empty {
  width: 100%;
  height: calc(100vh - 0px - 0px);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.loadmore .empty .back-btn {
  width: 240rpx;
  height: 70rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  margin-top: 20rpx;
  background-color: orange;
}
.loadmore-top {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #fff;
  z-index: 10;
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  height: 112rpx;
}
.loadmore-top .list {
  display: flex;
  justify-content: center;
}
.loadmore-top .list-item {
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
  border-radius: 30rpx;
  background-color: #ccc;
  transition: all .3s;
}
.loadmore-top .list-item.active.download {
  background: linear-gradient(120deg, #2E8B57 20%, green 50%, #2E8B57 80%);
}
.loadmore-top .list-item.active.hot {
  background: linear-gradient(120deg, #1E90FF 20%, #4169E1 50%, #1E90FF 80%);
}
.loadmore-top .list-item.active.like {
  background: linear-gradient(120deg, #FF69B4 20%, #FF1493 50%, #FF69B4 80%);
}

